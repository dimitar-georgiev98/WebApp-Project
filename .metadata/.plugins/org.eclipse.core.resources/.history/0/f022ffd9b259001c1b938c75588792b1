	<script>
		$(document).ready(function() {
			
			var me;			
			
			$('.add').click(function(){
				name = $('#name').val();
				description = $('#description').val();
				price = $('#price').val();
				/* imgLocation = $('#customFile').val(); */
			});	
		
			function addProduct(userId, data) {
				
					name = $('#name').val();
					description = $('#description').val();
					price = $('#price').val();
					/* imgLocation = data.toString(); */
					
					$.ajax({
						url: "/add",
						method: "POST",
						data: {
							name : name,
							description : description,
							price : price,
							userId : userId,
							/* imgLocation : imgLocation */
						},
						success: function(data) {
							if(data.includes("Error:")) {
								alert(data);
							}else{
								showProduct(name, description, price/* , imgLocation */, data);
							}
						},
						fail: function() {
							alert("Error!");
						}
					});
			}

			function getLoggedUser() {
				$.ajax({
					url : "/loggedUserId",
					method : "GET",
					complete : function(data) {
						switch (data.status) {
						case 200:
							me = data.responseJson;
							break;
						case 401:
							window.location.href = "index.html"
							break;
						default:
							break;
						}
					},
					fail : function() {
						window.location.href = "home.html";
					}
				});
			}
			
			getLoggedUser();
		});

		$('#logout').on('click', function() {

			$.ajax({
				url : "logout",
				method : "POST",
				complete : function(data) {
					if (data.status == 418) {
						alert("Error!");
					}
					window.location.href = "index.html";
				}
			});
		});
	</script>
